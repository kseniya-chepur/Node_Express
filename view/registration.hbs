<body>
     <a href="/login" style="position: fixed; right: 50px; top: 20px">Login</a>

    <h2 style="text-align: center; margin-top: 30px">Registration Form</h2>

    <form action="/registration" method="post" style="display: flex; flex-direction: column; align-items: center; justify-content: center">
        <input required type="text" name="userName">
        <label for="userName">username</label>
        <br>
        <input required type="email" name="email">
        <label for="email">email</label>
        <br>
        <input required type="password" name="password">
        <label for="password">password</label>
        <br>
        <input type="submit" name="submit">
    </form>     

</body>
